<html>
<head>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,600;0,700;1,500&display=swap');
    </style>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/public/style.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
        
</head>
<title>Home</title>

<body>
<!-- navbar -->
<nav class="navbar clearfix navbar-expand-lg navbar-light ">
    <div class="container-fluid pe-5 ps-5">
      <a class="navbar-brand me-5" href="/"><img src="/public/assets/logo.png" /></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active me-3 fw-bold" aria-current="page" href='/'>Home</a>
          </li>
          {{#if isLogin}}
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href='/add-project'>Add Project</a>
          </li>
          {{/if}}
        </ul>
          {{#if isLogin}}
          <span class='user-name me-2'>
            {{user.name}}
          </span>    |
          <a href='/logout' class='me-4 text-decoration-none fw-bold text-dark ms-2'>Logout</a>
        {{else}}
          <a href='/register' class='me-4 text-decoration-none  text-dark'>Register</a>
          <a href='/login' class='me-4 text-decoration-none  text-dark'>Login</a>
        {{/if}}
          <a class="btn btn-dark" type="submit" href='/contact-me'>Contact Me</a>
      </div>
    </div>
</nav>
<!-- end navbar -->
        {{#if messages.success}}
          <div class='alert alert-home alert-success mt-5'>
            {{messages.success}} 
          </div>
        {{/if}} 
        {{#if messages.delete}}
          <div class='alert alert-home alert-danger mt-5' role='alert'>
            {{messages.delete}}
          </div>
        {{/if}} 
<!-- card -->
<div class="container-home">
<div class="card mb-5 mt-5" style="max-width:900px">
  <div class="row g-0">
      <div class="col-md-7">
        <div class="card-body mt-5 ms-4">
          <h5 class="card-title fw-bold mb-3">Hi Welcome to my hut</h5>
          <p class="card-text ">Lorem ipsum dolor sit amet , consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum</p>
          
          <div class="mt-5">
              <button type="button" class="btn btn-dark">contact</button>
              <a class="text-decoration-none color-dark ms-3 text-dark " href="">download cv
                  <i class="bi bi-download ms-1"></i>
              </a>
          </div>
          <div class="sosial-media mt-5">
              <i class="fa-brands fa-linkedin-in"></i>
              <i class="fa-brands fa-instagram"></i>
              <i class="fa-brands fa-facebook-f"></i>
              <i class="fa-brands fa-twitter"></i>
          </div>
        </div>
      </div>
    <div class="card-right col-md-5">
      <div class="card-images ms-4 mt-4 s">
          <img class="images-profil"  src="/public/assets/yandi.jpeg" class="img-fluid rounded-start" alt="...">
          <div class="h4 mt-1 text-center fw-bold mt-3">
              Yandi Riswandi
              <p class="text-sm-start fw-normal fs-6">Fullstack Developer</p>
          </div>
      </div>
    </div>
  </div>
</div>
</div>

<!-- end card -->
<!-- content -->
<div class="content mt-5 pt-5 pb-5">
  <div class="h2 text-center mb-3 mt-4">MY PROJECT</div>
  <div class="container">
      <div class="row row-cols-3">
        <!-- card content -->
        {{#each projects}}
        <div class="col">
          <div class="card" style="width: 21rem;">
              {{#if this.image}}
              <img src="{{this.image}}" class="card-img" alt="..."> 
              {{else}}
                <img src="/public/assets/blank.png" class="card-img" alt="...">
              {{/if}}
              <h6 class="card-title ms-3 fw-bold me-3">
                <a class="text-decoration-none text-dark" href='project-detail/{{id}}'> {{this.name}}</a>
                <p class="text-start fw-normal  text-muted"><small>durasi : {{this.duration}}</small></p>
              </h6>
              <div>
                <p class="card-text ms-3 me-3">
                 {{this.description}}
                </p>
                <div class="icon ms-3 mt-2">
                  {{#if node_js includeZero=true}}
                  <i class="{{node_js}}"></i>
                  {{!-- {{else}} --}}
                  {{/if}}
                  {{#if react_js includeZero=true}}
                  <i class="{{react_js}}"></i>
                  {{!-- {{else}} --}}
                  {{/if}}
                   {{#if next_js includeZero=true}}
                  <i class="{{next_js}}"></i>
                  {{!-- {{else}} --}}
                   {{/if}}
                  {{#if type_script includeZero=true}}
                  <i class="{{type_script}}"></i>
                  {{!-- {{else}} --}}
                  {{/if}}
                </div>
                {{#if isLogin}}
                <div class="btn-card d-flex justify-content-center">
                  <a href="/update-project/{{id}}" class="btn btn-dark edit">edit</a>
                  <a href="/delete-project/{{id}}" class="btn btn-dark delete ">delete</a>
                </div>
                {{/if}}
              </div>
          </div>
        </div>
        <!--end-card-content -->
        {{/each}} 
      </div>
  </div>
</div>
<!-- end content -->
</body>
    {{!-- <script> Handlebars.registerHelper('isdefined', function (value) {
        return node_js !== undefined;
      }); --}}
    </script>
</html>
