<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/style.css">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Detail Project</title>
</head>
<body>
<!-- navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid pe-5 ps-5">
        <a class="navbar-brand me-5" href="/"><img src="/public/assets/logo.png" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
            <a class="nav-link active me-3" aria-current="page" href='/'>Home</a>
            </li>
             {{#if isLogin}}
            <li class="nav-item">
            <a class="nav-link active" aria-current="page" href='/add-project'>Add Project</a>
            </li>
             {{/if}}
        </ul>
        <a class="btn btn-dark" type="submit" href='/contact-me'>Contact Me</a>
        </div>
    </div>
</nav>
<!-- end navbar -->
<div class="container-all-detail">
    <div class="h1 text-center mt-5 mb-5 fw-bold">{{project.name}}</div>
<div class="container-detail-top">
    <div class="container-top d-flex ">
        <div class="container-top-left">
            <img src="{{project.image}}" alt="" style="width: 100%; height: 500px;">
        </div>
        <div class="container-top-right ms-5">
            <div class="detail">
                <h2 class="ms-2">Duration</h2>
                <div class="detail-icon d-flex align-items-center ms-2">
                    <img src="/public/assets/calender.png" style="width: 30px; height: 30px;">
                    <p class="ms-3 mt-3">{{project.start_date}} - {{project.end_date}}</p> 
                </div>
                <div class="detail-icon d-flex align-items-center ms-2">
                    <img src="/public/assets/jam.png"   style="width: 35px; height: 35px;">
                    <p class="ms-3 mt-3" >{{project.duration}}</p>
                </div>
                <h2 class="ms-2 mt-3">Technologies</h2>
                <div class="container mt-2">
                <div class="row row-cols-2">
                    {{#if project.react_js}}
                    <div class="col">
                        <div class="detail-icon d-flex align-items-center">
                            <i class="{{project.react_js}}"></i><p class="ms-3 mt-3">React Js</p>
                        </div>
                    </div>
                    {{else}}
                    <div hidden></div>
                    {{/if}}
                    {{#if project.node_js}}
                    <div class="col">
                        <div class="detail-icon d-flex align-items-center">
                            <i class="{{project.node_js}}"></i><p class="ms-3 mt-3">Node Js</p> 
                        </div>
                    </div>
                    {{/if}}
                    {{#if project.next_js}}
                    <div class="col">
                        <div class="detail-icon d-flex align-items-center">
                            <i class="{{project.next_js}}"></i><p class="ms-3 mt-3">Next Js</p>
                        </div>
                    </div>
                    {{/if}}
                    {{#if project.type_script}}
                    <div class="col">
                        <div class="detail-icon d-flex align-items-center">
                            <i class="{{project.type_script}}"></i><p class="ms-3 mt-3">TypeScript</p> 
                        </div>
                    </div>
                    {{/if}}
                </div>
                </div>
            </div>
                
        </div>
    </div>
</div>
<div style="width: 90%;text-align: justify;margin: auto;">
    <p>
       {{project.description}}
    </p>
</div>
</div>

<script>
 
</script>
</body>
</html>